#ifndef VFS_H
#define VFS_H

#define MAX_PATH (2048)

typedef struct _vfs_config {

  char connection_string[MAX_PATH];
  
} vfs_config;

typedef struct _vfs_h {

  int (*open)();
  int (*close)();
  
} vfs_h;

extern vfs_h* vfs_new(const vfs_config* config);
extern void vfs_close(vfs_h* vfs);

#endif // VFS_H
